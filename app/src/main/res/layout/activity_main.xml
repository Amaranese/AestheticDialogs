<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_dialog"
        android:layout_marginTop="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLASH DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_flash_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show Flash success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_flash_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show Flash error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECTIFY DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_connectify"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:id="@+id/rb_connectify_light"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:id="@+id/rb_connectify_dark"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="14dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_connectify_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show connectify success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_connectify_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show connectify error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOASTER DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_toaster"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:id="@+id/rb_toaster_light"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:id="@+id/rb_toaster_dark"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="14dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_toaster_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show toaster error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>


        <Button
            android:id="@+id/btn_toaster_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show toaster success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_toaster_dialog_warning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show toaster warning"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_toaster_dialog_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show toaster info"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMOTION DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>


        <Button
            android:id="@+id/btn_emotion_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show emotion success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_emotion_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show emotion error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAKE DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>


        <Button
            android:id="@+id/btn_drake_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show drake success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_drake_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show drake error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMOJI DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_emoji"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:id="@+id/rb_emoji_light"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:id="@+id/rb_emoji_dark"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="14dp" />
        </RadioGroup>


        <Button
            android:id="@+id/btn_emoji_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show emoji success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_emoji_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show emoji error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAINBOW DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_rainbow_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show rainbow error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>


        <Button
            android:id="@+id/btn_rainbow_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show rainbow success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_rainbow_dialog_warning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show rainbow warning"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_rainbow_dialog_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show rainbow info"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLAT DIALOG"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic|bold"
            android:layout_marginBottom="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_flat"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:id="@+id/rb_flat_light"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:id="@+id/rb_flat_dark"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="14dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_flat_dialog_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show flat success"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_flat_dialog_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show flat error"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_flat_dialog_warning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show flat warning"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btn_flat_dialog_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="Show flat info"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:onClick="onClick"/>


    </LinearLayout>




</LinearLayout>

</ScrollView>